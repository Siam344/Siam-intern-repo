{
  "name": "milestone-8-jest-for-unit-tests",
  "version": "1.0.0",
  "description": "Redux Jest Unit Testing Setup",
  "type": "module",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.0",
    "redux": "^4.2.1",
    "react-redux": "^8.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.4.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "jsx"]
  }
}
